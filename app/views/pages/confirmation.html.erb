  <div class="bannerconfirmation h-700" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @listing.photos.first.key %>);">
    <div class="text-container-confirmation">
      <h1>THANK YOU FOR BOOKING WITH RENTSTA!</h1>
    </div>
  </div>
  <div>
    <div class="containerbelowconfirmation">
      <h2>Please consider the following things before</h2>
      <h2>arriving at the <%= @booking.listing.name %></h2>
    </div>
