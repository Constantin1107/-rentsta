<h2>Bookings</h2>
<%= link_to 'Home', root_path, class: "btn button" %>
<% @bookings.each do |booking| %>
  <ul>
    <li><%= booking.user.email %></li>
    <li><%= booking.listing.name %></li>
    <li><%= booking.booking_date %></li>
    <li><%= booking.status %></li>
    <li><%= link_to 'Edit', edit_booking_path(booking.id), class: "btn button" %></li>
  </ul>
<% end %>
